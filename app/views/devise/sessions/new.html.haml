.single-container
  %header.single-header
    %h1.single-header__logo--center
      = link_to "#" do
        =image_tag("fmarket_logo_red.svg")
  %main.single-main-login
    %section.login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        =link_to new_user_registration_path, class: "btn-def--login" do
          新規会員登録
      .login-form-inner
        =link_to "#", class: "btn-def--facebook" do
          %i.fab.fa-facebook-f
          %span<>
          Facebookでログイン
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn-def--google" do
          %i.fab.fa-google
          %span<>
          Googleでログイン             
      .login-form-inner
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            = f.email_field :email, {autofocus: true, autocomplete: "email", placeholder: "メールアドレス",class:'form-group__input'}
          .form-group
            = f.password_field :password,{autocomplete: "current-password",placeholder: "パスワード",class:'form-group__input',id:"password"}
          .form-group
            = f.submit 'ログイン', class: "btn-default btn-red", url: "root_path"
  = render "/registration/registration_footer"